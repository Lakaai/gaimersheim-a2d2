{
    "version": 8,
    "configurePresets": [
        {
            "name": "clang_preset",
            "displayName": "Clang 19.1.2 x86_64-unknown-linux-gnu",
            "description": "Using compilers: C = /home/linuxbrew/.linuxbrew/bin/clang, CXX = /home/linuxbrew/.linuxbrew/bin/clang++",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/home/linuxbrew/.linuxbrew/bin/clang",
                "CMAKE_CXX_COMPILER": "/home/linuxbrew/.linuxbrew/bin/clang++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Configure preset using toolchain file",
            "displayName": "Configure preset using toolchain file",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        }
    ]
}